# Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Connection (add your MongoDB URI)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/afmart

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS Origin - Allow frontend
CORS_ORIGIN=https://afmart.vercel.app

# Frontend URL for email/notification links
FRONTEND_URL=https://afmart.vercel.app

